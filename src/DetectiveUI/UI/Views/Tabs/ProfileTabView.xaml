<UserControl x:Class="DetectiveUI.Views.Tabs.ProfileTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Профиль" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" />

            <TextBlock Text="Имя пользователя:" Margin="0,5" />
            <TextBox Text="{Binding Username, Mode=OneWay}" IsReadOnly="True" Margin="0,0,0,10" />

            <TextBlock Text="Старый пароль:" Margin="0,5" />
            <TextBox Text="{Binding OldPassword, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />

            <TextBlock Text="Новый пароль:" Margin="0,5" />
            <TextBox Text="{Binding NewPassword, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />

            <TextBlock Text="Подтвердите пароль:" Margin="0,5" />
            <TextBox Text="{Binding ConfirmPassword, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />

            <Button Content="Изменить пароль"
                    Command="{Binding ChangePasswordCommand}"
                    IsEnabled="{Binding ChangePasswordCommand.CanExecute}"
                    Margin="0,10" Padding="10,5" />

            <Button Content="Выйти"
                    Command="{Binding LogoutCommand}"
                    Margin="0,10" Padding="10,5" Background="LightCoral" />

            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap" Margin="0,5" />
            <TextBlock Text="{Binding SuccessMessage}" Foreground="Green" TextWrapping="Wrap" Margin="0,5" />
        </StackPanel>
    </Grid>
</UserControl>