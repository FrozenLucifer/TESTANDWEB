<UserControl x:Class="DetectiveUI.Views.Tabs.AdminTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel>
            <Button Content="Получить список пользователей"
                    Command="{Binding GetUsersCommand}"
                    Margin="5" Padding="10" />
            <DataGrid ItemsSource="{Binding Users}"
                      AutoGenerateColumns="False"
                      Margin="5"
                      IsReadOnly="True"
                      SelectionUnit="CellOrRowHeader">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Логин" Binding="{Binding Username}" Width="*" />
                    <DataGridTextColumn Header="Роль"
                                        Binding="{Binding Type}"
                                        Width="*" />
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBox Text="{Binding NewUsername}" Width="150" Margin="5" />
                <ComboBox ItemsSource="{Binding UserTypes}"
                          SelectedItem="{Binding SelectedUserType}"
                          Width="100" Margin="5" />
                <Button Content="Создать"
                        Command="{Binding CreateUserCommand}"
                        Margin="5" Padding="10" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBox Text="{Binding SelectedUsername}" Width="150" Margin="5" />
                <Button Content="Удалить"
                        Command="{Binding DeleteUserCommand}"
                        Margin="5" Padding="10" />
                <Button Content="Сбросить пароль"
                        Command="{Binding ResetPasswordCommand}"
                        Margin="5" Padding="10" />
            </StackPanel>

            <Border Visibility="{Binding ShowPassword, Converter={StaticResource BoolToVisibilityConverter}}"
                    Background="LightYellow" Margin="5" Padding="10">
                <StackPanel>
                    <TextBlock Text="Временный пароль:" FontWeight="Bold" />
                    <Grid>
                        <TextBox Text="{Binding TempPassword, Mode=OneWay}"
                                 IsReadOnly="True" Margin="0,5,0,0" />
                        <Button Content="Копировать" Command="{Binding CopyPasswordCommand}"
                                HorizontalAlignment="Right" VerticalAlignment="Center"
                                Margin="5" Padding="5,2" />
                    </Grid>
                    <Button Content="Закрыть" Command="{Binding ClosePasswordCommand}"
                            HorizontalAlignment="Right" Margin="0,5,0,0" />
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>